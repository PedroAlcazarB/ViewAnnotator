# Configuración de Seguridad
# IMPORTANTE: Cambia esta clave por una única y segura en producción
# Puedes generar una con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Configuración de MongoDB
MONGO_URI=mongodb://mongo:27017/
MONGO_INITDB_DATABASE=viewannotator

# Configuración de Flask
FLASK_ENV=production
FLASK_APP=app.py


# Configuración de Puertos
# Puerto del Frontend en producción (único punto de entrada)
FRONTEND_PORT=5050

# Puertos para desarrollo (solo usados en docker-compose.dev.yml)
BACKEND_PORT=5000
FRONTEND_DEV_PORT=8080
